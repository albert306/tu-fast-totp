{
    "manifest_version": 2,
    "name": "tu-fast-totp",
    "version": "1.0",
  
    "description": "automates the required totp 2FA process on the TU-Dresden ZIH login ",
  
    "icons": {
      "48": "icons/icon-48.png"
    },

    "permissions": ["activeTab", "tabs"],

    "browser_action": {
      "default_icon": "icons/icon-48.png",
      "default_title": "tu-fast-totp",
      "default_popup": "popup/popup.html"
    },

    "content_scripts": [
      {
        "matches": ["https://idp.tu-dresden.de/idp/profile/SAML2/Redirect/SSO*"],
        "run_at": "document_idle",
        "js": ["content_scripts/totp.js"]
      }
    ]
  }
  